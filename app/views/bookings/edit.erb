<h1>Edit book time off</h1>

<%= form_for :booking, url: booking_path(@booking.id) , method: :patch do |f| %>
    <p>
      <%= f.label :who %><br>
      <%= f.text_field :who %>
    </p>

    <p>
      <%= f.label :from %><br>
      <%= f.date_select :from %>
    </p>

    <p>
      <%= f.label :to %><br>
      <%= f.date_select  :to %>
    </p>

    <p>
      <%= f.submit 'Update' %>
    </p>
<% end %>

<%= link_to 'Back', bookings_path %>