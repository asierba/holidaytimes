<!DOCTYPE html>
<html>
<head>
  <title>Book holidays!</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">

  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapsable">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Holidays</a>
  </div>

  <div class="collapse navbar-collapse" id="navbar-collapsable">
      <ul class="nav navbar-nav navbar-left">
        <li>
          <a href="/approvals">Approvals</a>
        </li>
      </ul>
      <ul id="user" class="nav navbar-nav navbar-right">
        <% if $has_auth_provider %>
        <li>
            <% if current_user %>
              Welcome, <strong><%= link_to current_user.name, '/users/show/%d' % current_user.id %></strong>!
                  <%= link_to "Not you?", "/auth/logout" %>
            <% else %>
              <a href="/auth/ldap"><i class="glyphicon glyphicon-lock"></i>&nbsp;Sign in</a>
            <% end %>
        </li>
        <% end %>
      </ul>
  </div>

</nav>
<div class="container">

<%= yield %>

</div>
</body>
</html>
