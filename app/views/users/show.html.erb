<h1>Show User</h1>
<p>
  <strong>Username:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Num days of holidays left:</strong>
  <%= @user.holidayDaysLeft %>
</p>

<table border="1">
  <tr>
    <th>who</th>
    <th>from</th>
    <th>to</th>
  </tr>
<% @user.bookings.each do |booking| %>
    <tr>
      <td><%= booking.who %></td>
      <td><%= booking.from %></td>
      <td><%= booking.to %></td>
    </tr>
<% end %>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
